var exp = exports;

exp.asSimpleJson = function(code, msg, data) {
    var json = {};
    json['code'] = code;
    json['msg'] = msg;
    json['data'] = data;
    return JSON.stringify(json);
};

exp.asSimpleSuccessJson = function(data) {
    return exp.asSimpleJson(exp.CODES.SUCCESS, '操作成功', data);
};

exp.asSimpleFailJson = function(data) {
    return exp.asSimpleJson(exp.CODES.ERROR_FAIL_COMMON, '操作成功', data);
};

exp.printHeaders = function(headers, extra) {
    for (var key in headers) {
        console.log(extra + ' headers key = ' + key + ', value = ' + headers[key]);
    }
};

exp.CODES = {
  SUCCESS 			: 200,
  ERROR_FAIL_COMMON	: 400
};
