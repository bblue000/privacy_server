var path = require("path"),
    fs = require('fs');
	
	
exports.isString = function(data) {
	if (!data) {
		return false;
	}
	return (typeof data) === 'string' && data.constructor === String;
};

exports.isArray = function(data) {
	if (!data) {
		return false;
	}
	return (typeof data) === 'object' && data.constructor === Array;
};

exports.isFunction = function(data) {
	if (!data) {
		return false;
	}
	return (typeof data) === 'object' && data.constructor === Array;
};